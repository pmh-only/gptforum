{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
